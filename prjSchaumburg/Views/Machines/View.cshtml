@model prjSchaumburg.Models.UpdateMachineViewModel

@{
}

<h1>Edit Machine</h1>
<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Make</label>
        <input type="text" class="form-control" asp-for="Make">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Model</label>
        <input type="text" class="form-control" asp-for="Model">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Year</label>
        <input type="number" class="form-control" asp-for="Year">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Machines">Delete</button>
    <button type="submit" class="btn" asp-action="Add" asp-controller="Components" asp-route-id="@Model.Id">Add Component</button>
</form>